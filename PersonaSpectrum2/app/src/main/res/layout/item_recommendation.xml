<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <TextView
        android:id="@+id/recommendation_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trait"
        android:textStyle="bold"
        android:textSize="26sp"
        android:textColor="?android:attr/textColorPrimary" />

    <TextView
        android:id="@+id/recommendation_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Recommendation description goes here."
        android:textSize="20sp"
        android:textColor="?android:attr/textColorSecondary" />

    <TextView
        android:id="@+id/recommendation_app_suggestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="App suggestion goes here."
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="@color/primary_color" />

</LinearLayout>